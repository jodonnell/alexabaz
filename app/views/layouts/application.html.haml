!!!
%html
  %head
    %title Alexa Baz - LCSW
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{:href => 'http://fonts.googleapis.com/css?family=Marcellus', :rel => 'stylesheet',  :type => 'text/css'}
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-35191110-1']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
      %body
    #header
      = image_tag 'room_with_windows_unedited.jpg', :class => 'header_image'
    #content{:itemscope => '', :itemtype=>"http://schema.org/ProfessionalService"}
      #inner_content

        #top_bar    
          #nav.float_right
            %ul.sf-menu
              %li
                .nav_link.float_left
                  = link_to 'Home', root_path
              %li
                .nav_link.float_left
                  = link_to 'Background', background_path
              %li
                .nav_link.float_left
                  = link_to 'Approach', '#'
                  %ul
                    %ul
                      %li
                        = link_to 'Children', children_path
                      %li
                        = link_to 'Adolescents', adolescents_path
                      %li
                        = link_to 'Adults', adults_path
              %li
                .nav_link.float_left{style: 'position: relative; top: -20px;'}
                  &nbsp;
                  = link_to 'Contact', contact_path

          #title
            #title_text{:itemprop => "name"}
              Alexa Baz, LCSW

        = yield
        %footer
          %hr
            .float_right
              %span{:itemprop => "telephone"}
                (646) 783-8514
                %br
                = mail_to 'bazlcsw@gmail.com'
            %div{:itemprop => "address", :itemscope => '', :itemtype => "http://schema.org/PostalAddress"}
              %span{:itemprop => "streetAddress"}
                26 Court Street, Suite 2703
              %br/
              = succeed ',' do
                %span{:itemprop => "addressLocality"}
                  Brooklyn
              %span{:itemprop => "addressRegion"}
                NY
              %span{:itemprop => "postalCode"}
                11201
